<Window x:Class="CameraShowDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CameraShowDemo"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Image x:Name="CaptureImage" Stretch="UniformToFill"/>
        <StackPanel Orientation="Horizontal">
            <Button Content="开始显示" Width="80" Click="StartButton_OnClick" VerticalAlignment="Bottom" HorizontalAlignment="Center"></Button>
            <Button Content="开始录制" Width="80" Click="StartCaptureButton_OnClick" VerticalAlignment="Bottom" HorizontalAlignment="Center"></Button>
        </StackPanel>
    </Grid>
</Window>
